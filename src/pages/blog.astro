---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';

const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.DEV || !data.draft;
});

posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog - Kenny Igbechi">
	<Navigation />
	<main class="max-w-2xl mx-auto px-4 sm:px-6 pb-16">
		<h1 class="text-2xl font-bold tracking-tight mt-8 mb-8">Blog</h1>

		<div class="space-y-8">
			{posts.map(post => (
				<article>
					<h2 class="text-lg font-medium text-zinc-900 dark:text-zinc-100">
						<a href={`/blog/${post.slug}`} class="underline decoration-zinc-300 dark:decoration-zinc-700 underline-offset-2 hover:decoration-zinc-500 dark:hover:decoration-zinc-400">
							{post.data.title}
						</a>
					</h2>
					<time datetime={post.data.pubDate.toISOString()} class="block text-sm text-zinc-500 dark:text-zinc-400 mt-1">
						{format(post.data.pubDate, 'MMMM d, yyyy')}
					</time>
					<p class="mt-2 text-zinc-600 dark:text-zinc-400">
						{post.data.description}
					</p>
				</article>
			))}
		</div>
	</main>
</Layout>
