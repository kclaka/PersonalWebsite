---
const { className = '' } = Astro.props;
---

<div class={`giscus ${className}`}>
    <script
        src="https://giscus.app/client.js"
        data-repo="[OWNER]/[REPO]" // Replace with your repository
        data-repo-id="[REPO-ID]" // Replace after installing giscus
        data-category="Blog Comments"
        data-category-id="[CATEGORY-ID]" // Replace after installing giscus
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="dark_dimmed"
        data-lang="en"
        data-loading="lazy"
        crossorigin="anonymous"
        async
    >
    </script>
</div>

<style>
    .giscus {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid rgb(63 63 70 / 0.5);
    }
</style>
